{
  "openapi": "3.0.3",
  "info": {
    "title": "In.orbit",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {}
  },
  "paths": {
    "/goals": {
      "post": {
        "operationId": "createGoal",
        "tags": [
          "goals"
        ],
        "description": "Create a goal",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "desiredWeeklyFrequency": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 7
                  }
                },
                "required": [
                  "title",
                  "desiredWeeklyFrequency"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "enum": [
                    "null"
                  ],
                  "nullable": true
                }
              }
            }
          }
        }
      }
    },
    "/completions": {
      "post": {
        "operationId": "createCompletion",
        "tags": [
          "goals"
        ],
        "description": "Create a goal completion",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "goalId": {
                    "type": "string"
                  }
                },
                "required": [
                  "goalId"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "enum": [
                    "null"
                  ],
                  "nullable": true
                }
              }
            }
          }
        }
      }
    },
    "/pending-goals": {
      "get": {
        "operationId": "getPendingGoals",
        "tags": [
          "goals"
        ],
        "description": "Get pending goals",
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "title": {
                      "type": "string"
                    },
                    "desiredWeeklyFrequency": {
                      "type": "number"
                    },
                    "completionCount": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "id",
                    "title",
                    "desiredWeeklyFrequency",
                    "completionCount"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
    "/summary": {
      "get": {
        "operationId": "getWeekSummary",
        "tags": [
          "goals"
        ],
        "description": "Get week summary",
        "parameters": [
          {
            "schema": {
              "type": "string",
              "format": "date-time",
              "default": {}
            },
            "in": "query",
            "name": "weekStart",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "completed": {
                      "type": "number"
                    },
                    "total": {
                      "type": "number",
                      "nullable": true
                    },
                    "goalsPerDay": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "title": {
                              "type": "string"
                            },
                            "completedAt": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "id",
                            "title",
                            "completedAt"
                          ],
                          "additionalProperties": false
                        }
                      },
                      "nullable": true
                    }
                  },
                  "required": [
                    "completed",
                    "total",
                    "goalsPerDay"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
    "/auth/github": {
      "post": {
        "operationId": "authenticateFromGitHub",
        "tags": [
          "auth"
        ],
        "description": "Authenticate user from GitHub code",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "type": "string"
                  }
                },
                "required": [
                  "code"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "token"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
    "/profile": {
      "post": {
        "operationId": "getProfile",
        "tags": [
          "auth"
        ],
        "description": "Get authenticated user's profile",
        "responses": {
          "201": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "profile": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "name": {
                          "type": "string",
                          "nullable": true
                        },
                        "email": {
                          "type": "string",
                          "nullable": true
                        },
                        "avatarUrl": {
                          "type": "string",
                          "nullable": true
                        }
                      },
                      "required": [
                        "id",
                        "name",
                        "email",
                        "avatarUrl"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "profile"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
    "/profile/gamification": {
      "get": {
        "operationId": "getUserExperienceAndLevel",
        "tags": [
          "users",
          "gamification"
        ],
        "description": "Get user experience and level",
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "experience": {
                      "type": "number"
                    },
                    "level": {
                      "type": "number"
                    },
                    "experienceToNextLevel": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "experience",
                    "level",
                    "experienceToNextLevel"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    }
  }
}